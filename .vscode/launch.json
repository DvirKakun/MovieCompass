{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: Uvicorn (FastAPI)",
      "type": "debugpy",
      "request": "launch",
      "module": "uvicorn",
      "cwd": "${workspaceFolder}/backend",
      "args": [
        "app.main:application", // <-- adjust this path
        "--reload",
        "--host",
        "127.0.0.1",
        "--port",
        "8000"
      ],
      "jinja": true,
      "console": "integratedTerminal"
    }
  ]
}
